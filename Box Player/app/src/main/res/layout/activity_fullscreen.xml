<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:bvp="http://schemas.android.com/apk/res-auto"
    android:background="#0099cc"
    android:id="@+id/frameFull"
    tools:context="com.halilibo.sample.FullscreenActivity">

    <com.halilibo.bettervideoplayer.BetterVideoPlayer
        android:id="@+id/bvp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        bvp:bvp_captionSize="20sp"
        android:gravity="center"
        android:keepScreenOn="true"
        bvp:bvp_autoPlay="true"/>

    <ImageView
        android:id="@+id/mainscreen_activity_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="4pt"
        android:layout_marginRight="4.5pt"
        android:alpha="0"
        android:background="@drawable/ic_screen_rotation" />

</FrameLayout>
